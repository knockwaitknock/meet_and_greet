header {

  position: absolute;
  z-index: 100000;
  top: 0;

  width: 100%;
  min-width: 980px;

  &.color-dark {
    a {
      color: $black
    }

    .social a.social-item-fb
    {
      background: url('<%= asset_path("fb-black.png") %> ') no-repeat;
    }

    .social a.social-item-tw
    {
      background: url('<%= asset_path("tw-black.png") %> ') no-repeat;
    }

    .menu .menu-list
    {
      background-image: url('<%= asset_path("dividers-black.png") %> ');
    }
  }

  &.color-light {
    a {
      color: $white
    }
    .social a.social-item-fb
    {
      background: url('<%= asset_path("fb.png") %> ') no-repeat;
    }
    .social a.social-item-tw
    {
      background: url('<%= asset_path("tw.png") %> ') no-repeat;
    }
    .menu .menu-list
    {
      background-image: url('<%= asset_path("dividers.png") %> ');
    }
  }

  &.color-dark,
  &.color-light {
      .social a.social-item-fb:hover
      {
        background: url('<%= asset_path("fb-green.png") %> ') no-repeat;
      }

      .social a.social-item-tw:hover {
        background: url('<%= asset_path("tw-green.png") %> ') no-repeat;
      }
  }

  .logo {
    position: fixed;
    z-index: 100000;
    top: 0;
    left: 0;

    a.header-logo {
      float: left;

      width: 95px;
      height: 50px;
      margin: 15px 20px;

      opacity: 0;
      background: url('<%= asset_path("logo-small-green.png") %> ') no-repeat;
    }
  }

  .menu
  {
    width: 980px;
    height: 80px;
    margin: 0 auto;
    padding: 0 20px;

    .menu-list
    {
      display: table;

      margin: 0;
      padding: 0;

      list-style-type: none;

      -webkit-transition: background-image .2s linear;
      -moz-transition: background-image .2s linear;
      -ms-transition: background-image .2s linear;
      -o-transition: background-image .2s linear;
      transition: background-image .2s linear;
      background-position: 150px 0;
      background-repeat: no-repeat;

      .menu-item
      {
        position: relative;

        display: table-cell;

        width: 130px;
        height: 80px;
        padding-right: 40px;

        text-align: center;
        vertical-align: middle;

        a
        {
          font-family: 'hagin_caps_medium';
          font-size: 16px;
          font-weight: normal;
          line-height: 20px;

          text-decoration: none;
          text-transform: uppercase;
        }

        a:hover,
        &.active a
        {
          color: $green;
        }
      }

      .menu-item:last-child
      {
        padding: 0;
      }
    }
  }

  .social
  {
    position: fixed;
    /*z-index: 100000;*/
    top: 0;
    right: 0;

    a.social-item-tw,
    a.social-item-fb {
      float: right;

      width: 41px;
      height: 41px;
      margin: 20px 0;
    }
  }



  .social a.social-item-tw
  {
    margin-right: 20px;
  }
  .social a.social-item-fb
  {
    margin-right: 10px;
  }

}

footer
{
  position: fixed;
  z-index: 100000;
  bottom: 30px;
  left: 0;

  width: 100%;

  &.color-dark a
  {
    color: #292929;
  }
  &.color-light a
  {
    color: $white
  }

  .enroll
  {
    font-family: 'hagin_caps_medium';
    font-size: 20px;

    width: 300px;
    height: 50px;
    margin: 0 auto;

    -webkit-transition: background-image .2s linear;
    -moz-transition: background-image .2s linear;
    -ms-transition: background-image .2s linear;
    -o-transition: background-image .2s linear;
    transition: background-image .2s linear;
    text-align: center;

    background: url('<%= asset_path("button.png") %> ') -1px -1px no-repeat;

    a
    {
      line-height: 50px;

      text-decoration: none;
      text-transform: uppercase;
    }

    a:hover,
    a.active
    {
      color: $green;
    }
  }

  &.color-light .enroll
  {
    background: url('<%= asset_path("button.png") %> ') no-repeat;
    background-position: -1px -1px;
  }
  &.color-dark .enroll
  {
    background: url('<%= asset_path("button-black.png") %> ') no-repeat;
    background-position: -1px -1px;
  }
}

